{
  "compilerOptions": {
    "target": "es2022",
    "lib": ["es2022", "esnext"],
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "allowJs": true,
    "sourceMap": true,
    "outDir": "dist"
  }
}
